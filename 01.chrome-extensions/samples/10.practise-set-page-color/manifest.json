{
    "manifest_version": 3,
    "version": "0.0.1",
    "name": "Background Color Setter",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ]
}